import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

public class Main {


        public static void main(String[] args) {
                ArrayList BücherListe = new ArrayList<>();  // Liste in der alle Bücher gespeichert werden
                ArrayList StudentenListe = new ArrayList<>(); // Liste in der alle Studenten gespeichert werden

                int i = 1;

                while (i == 1) { // führt die Anwendung solange aus , bis Schritt 5 ausgeführt wird
                        System.out.println("Was möchten sie heute tun ? (Tipp: zuerst immer etwas kreieren)  \n" +
                                "1 = Ich möchte einen Studenten oder ein Buch kreieren \n " +
                                "2 = ich möchte ein Studenten/Buch aktualisieren \n " +
                                "3 = Ich brauche Informationen über ein Student/Buch \n " +
                                "4 = Ich möchte einen Studenten/Buch löschen \n " +
                                "5 = Ich will die Anwendung verlassen");
                        Scanner scannerVariable = new Scanner(System.in);

                        System.out.print("geben sie die entsprechende Zahl ein : ");
                        int number = scannerVariable.nextInt();
                        System.out.print("sie haben " + "  " + number + " " + "eingegeben,  \n");


                        switch (number) {
                                case 1:
                                        System.out.println("was wollen sie kreieren? geben sie 1 für Buch ein und 2 für Student");
                                        int buch = scannerVariable.nextInt();
                                        if (buch == 1) {

                                                BücherListe.add("Harry Potter");
                                                BücherListe.add("440 Seiten");
                                                BücherListe.add("Author J.K. Rowling");
                                                System.out.println(BücherListe);
                                                /*Book bookObject = new Book(109);
                                                bookObject.setName("Harry Potter");
                                                listBook.add(bookObject);

                                                System.out.println("Name B : " + bookObject.getName());
                                                System.out.println("Seitenzahl : " + bookObject.getSeitenzahl());
                                                */
                                        } else {

                                                StudentenListe.add("Paul Volk");
                                                StudentenListe.add(" Mtrknr. 3453234");
                                                StudentenListe.add("1. Semester");
                                                System.out.println(StudentenListe);




                                               /* Student studentObject = new Student(20);
                                                studentObject.setName("Hans");
                                                listStudent.add(studentObject);
                                                System.out.println("Alter : " + studentObject.getAlter());
                                                System.out.println(" Name S : " + studentObject.getName());
                                                */

                                        }
                                        System.out.print("Sie kehren jetzt ins Menü zurück \n ");
                                        break;

                                case 2:
                                        System.out.println("sie wollen also einen Studenten aktualisieren");
                                        System.out.println("Guide : ... Geben sie im Menü 1 ein und verändern sie einfach die Werte im Code");
                                        break;

                                case 3: System.out.println("Infos zu Buch = 1 oder Student = 2 ?  ");
                                        int IBS = scannerVariable.nextInt();
                                        if(IBS == 1) {
                                                System.out.println(BücherListe);

                                        }else{
                                                System.out.println(StudentenListe);
                                        }
                                        break;
                                case 4:System.out.println("Sie möchten also einen Student/Buch löschen \n" + " 1 = Buch und 2 = Student" );
                                        int wasloeschen = scannerVariable.nextInt();
                                        if(wasloeschen == 1){
                                                System.out.println(BücherListe);
                                                System.out.println("welches Buch möchten sie löschen ?");
                                                BücherListe.clear();
                                                System.out.print("Ich Lösche ihre Auswahl \n");

                                        }else{
                                                System.out.println(StudentenListe);
                                                System.out.println("Welcher Student soll gelöscht werden ?" );
                                                StudentenListe.clear();
                                                System.out.print("  Ich Lösche ihre Auswahl \n ");
                                        }



                                        break;
                                case 5: System.out.println("sie verlassen nun die Anwendung");
                                        i++;
                        }
                }


        }
}
